{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Glob",
      "Grep",
      "LS",
      "TodoWrite",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [],
    "ask": [
      "NotebookEdit",
      "KillBash"
    ],
    "defaultMode": "default"
  },
  "includeCoAuthoredBy": true,
  "cleanupPeriodDays": 30,
  "env": {
    "EDITOR": "code",
    "GIT_EDITOR": "code --wait",
    "POWERSHELL_TELEMETRY_OPTOUT": "1"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "Write-Host '‚úì File modified' -ForegroundColor Green",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command", 
            "command": "Write-Host 'üîß Running command...' -ForegroundColor Yellow",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "Write-Host \"üìÅ $(Split-Path -Leaf $PWD) | üïê $(Get-Date -Format 'HH:mm')\" -NoNewline",
    "padding": 2
  }
}