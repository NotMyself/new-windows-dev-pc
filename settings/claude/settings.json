{
  "env": {
    "SHELL": "pwsh",
    "CLAUDE_SHELL": "pwsh",
    "CLAUDE_AGENTS_PATH": ".claude/agents",
    "PAGER": "less",
    "TERM": "xterm-256color",
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "DOTNET_SKIP_FIRST_TIME_EXPERIENCE": "1",
    "NPM_CONFIG_LOGLEVEL": "warn",
    "NPM_CONFIG_COLOR": "always",
    "GIT_PAGER": "less",
    "GIT_ASKPASS": "echo",
    "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
    "AZURE_TENANT_ID": "${AZURE_TENANT_ID}",
    "AZURE_CLIENT_ID": "${AZURE_CLIENT_ID}",
    "AZURE_CLIENT_SECRET": "${AZURE_CLIENT_SECRET}",
    "OP_SERVICE_ACCOUNT_TOKEN": "${OP_SERVICE_ACCOUNT_TOKEN}",
    "PATH": "C:\\Program Files\\PowerShell\\7;C:\\Program Files\\dotnet;C:\\Program Files\\Microsoft SDKs\\Azure\\CLI2\\wbin\\;%LOCALAPPDATA%\\Microsoft\\WinGet\\Links\\"
  },
  "terminal": {
    "shell": "pwsh",
    "args": [
      "-ExecutionPolicy",
      "Bypass",
      "-Command"
    ]
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(winget:*)",
      "Bash(code:*)",
      "Bash(pwsh:*)",
      "Bash(mkdir:*)",
      "Bash(dotnet:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(prettier:*)",
      "Bash(markdownlint:*)",
      "Bash(op:*)",
      "Bash(az:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "bash": {
      "pre": [
        {
          "command": "pwsh -Command \"if (Get-Command refresh-env -ErrorAction SilentlyContinue) { refresh-env }\"",
          "condition": "command.startsWith('pwsh')"
        }
      ]
    }
  },
  "mcpServers": {
    "git": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-git"
      ],
      "env": {
        "GIT_ALLOWED_REPOS": "C:\\Users\\BobbyJohnson\\src"
      }
    },
    "powershell": {
      "command": "pwsh",
      "args": [
        "-Command",
        "npx @modelcontextprotocol/server-shell"
      ],
      "env": {
        "ALLOWED_COMMANDS": "git;dotnet;npm;node;code;pwsh;wsl"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem"
      ],
      "env": {
        "ALLOWED_DIRECTORIES": "C:\\Users\\bobby\\src"
      }
    }
  }
}
